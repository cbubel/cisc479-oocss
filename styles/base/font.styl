$font-ratio = 1.414em
$font-family = serif
$title-font-family = 'Lobster', cursive;
$line-height = 1.45

body
    font-family: $font-family
    line-height: $line-height

h1, h2, h3, h4, h5, h6
    font-weight: bold
    font-family: $title-font-family
    margin: ($font-ratio ** -3) 0 ($font-ratio ** -2)

a
    font-weight: bold
    text-decoration: none
    
p
    margin-bottom: 1.3em
    
html
    margin-top: 0
    font-size: $font-ratio ** 0
    
h1
    font-size: $font-ratio ** 4
    
h2
    font-size: $font-ratio ** 3 
    
h3
    font-size: $font-ratio ** 2
    
h4
    font-size: $font-ratio ** 1
    
h5
    font-size: $font-ratio ** 0
    
h6
    font-size: $font-ratio ** -1

small
    font-size: $font-ratio ** -1